[user]
    name = Giovanni
    email = gihhskt@gmail.com
    signingkey = ~/.ssh/id_ed25519
[pull]
    rebase = true
[push]
    default = current
[init]
    defaultBranch = main
[color]
    ui = auto
[diff]
    tool = vimdiff

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    lg = log --oneline --graph --decorate --all
    unstage = reset HEAD --
    last = log -1 HEAD
[core]
    editor = nano
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
    helper = cache --timeout=3600